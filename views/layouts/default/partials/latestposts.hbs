<div class="container mx-auto lg:p-4">
  <div class="grid md:grid-cols-1 lg:grid-cols-2 gap-[20px]">
    {{#each latestposts}}
    <div
      class="cursor-pointer flex md:items-center lg:items-center md:h-[350px] lg:h-[250px] overflow-hidden bg-white rounded-lg hover:shadow-2xl ease-in-out duration-300 p-[25px] border-solid border-[1px] border-[#8589a038]">
      <div class="w-2/5 overflow-hidden bg-cover rounded-[15px]">
        <img class="h-[100%]" src="{{img}}" alt="{{name}}">
      </div>

      <div class="w-3/5 ml-[20px] lg:p-4 md:p-6">
        <h2
          class="text-lg md:text-xl font-semibold text-[#313d5d] hover:text-[#4776e6] ease-in-out duration-300 text-[20px]">
          {{name}}</h2>
        <div class="mt-2 text-sm md:text-base text-gray-600 flex italic ">
          <p class="text-[13px]">{{date}}</p>
          <li class="ml-[8px] text-[13px]">{{comment}}</li>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>